//                     data: { email : CustomerEmailValue, method : 'update' },
//                     type: 'POST',
//                     success: function ( res_data ) {
//                       window.location.href = '/';
//                     }
//                   });
//                 }
//               });
//               $('#customer_login').attr('action', '/account/login');
